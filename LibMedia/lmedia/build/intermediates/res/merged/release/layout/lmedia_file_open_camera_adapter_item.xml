<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/lmedia_file_item_bg"
        android:clickable="true" android:tag="layout/lmedia_file_open_camera_adapter_item_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_height="90dp"
            tools:background="#f00"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@mipmap/lmedia_icon_camera"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toTopOf="@+id/tv_time"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:paddingTop="10dp"
            android:textColor="#ff999999"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/iv_cover"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="拍一拍" />

    </androidx.constraintlayout.widget.ConstraintLayout>
         