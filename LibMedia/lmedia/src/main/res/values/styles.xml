<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="lmedia_theme_select" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lmedia_colorPrimary</item>
        <item name="colorPrimaryDark">@color/lmedia_colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/lmedia_colorPrimaryDark</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 防止按鈕變大寫 -->
        <item name="android:textAllCaps">false</item>
        <!--提示字体的颜色-->
        <item name="android:textColorHint">#ff999999</item>
        <!--下划线没有获取焦点，也就是默认的颜色-->
        <item name="colorControlNormal">#ffcccccc</item>
    </style>
    <style name="lmedia_select_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/lmedia_title_bar_height</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/lmedia_select_item_bg</item>
    </style>

    <style name="lmedia_select_btn_type" parent="@style/lmedia_select_btn">
        <item name="android:textColor">#ff444444</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:drawableEnd">@mipmap/lmedia_icon_right_arrow</item>
    </style>
</resources>